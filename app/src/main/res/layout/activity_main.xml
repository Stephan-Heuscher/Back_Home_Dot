<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:paddingTop="48dp"
    android:paddingBottom="20dp"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- App Titel -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="AssistiPunkt"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="?android:attr/textColorPrimary"
            android:gravity="center"
            android:contentDescription="AssistiPunkt App"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ihr Tipp-Helfer zur Navigation"
            android:textSize="18sp"
            android:textColor="?android:attr/textColorSecondary"
            android:gravity="center"
            android:contentDescription="Ihr Tipp-Helfer zur Navigation"
            android:layout_marginBottom="32dp" />

        <!-- Berechtigungen Section -->
        <LinearLayout
            android:id="@+id/permissions_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fehlende Berechtigungen"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="?android:attr/textColorPrimary"
                android:layout_marginBottom="16dp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/overlay_permission_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:minHeight="64dp"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="12dp">

                    <TextView
                        android:id="@+id/overlay_status_icon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:text="✗"
                        android:textSize="28sp"
                        android:textColor="#D32F2F"
                        android:gravity="center"
                        android:layout_marginEnd="16dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="AssistiPunkt anzeigen"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="?android:attr/textColorPrimary" />

                        <TextView
                            android:id="@+id/overlay_status_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Zeigt den AssistiPunkt über Apps"
                            android:textSize="14sp"
                            android:textColor="?android:attr/textColorSecondary"
                            android:layout_marginTop="2dp" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/overlay_permission_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Erlauben"
                        android:textSize="16sp"
                        android:contentDescription="AssistiPunkt über Apps anzeigen erlauben"
                        android:minHeight="48dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/accessibility_permission_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:minHeight="64dp"
                android:paddingHorizontal="20dp"
                android:paddingVertical="12dp">

                <TextView
                    android:id="@+id/accessibility_status_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="✗"
                    android:textSize="28sp"
                    android:textColor="#D32F2F"
                    android:gravity="center"
                    android:layout_marginEnd="16dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Navigation erlauben"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="?android:attr/textColorPrimary" />

                    <TextView
                        android:id="@+id/accessibility_status_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Für Zurück, Home und App-Wechsel"
                        android:textSize="14sp"
                        android:textColor="?android:attr/textColorSecondary"
                        android:layout_marginTop="2dp" />
                </LinearLayout>

                <Button
                    android:id="@+id/accessibility_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Erlauben"
                    android:textSize="16sp"
                    android:contentDescription="Navigation erlauben"
                    android:minHeight="48dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- Aktivieren/Deaktivieren Switch -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:contentPadding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:minHeight="64dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AssistiPunkt Ein/Aus"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="?android:attr/textColorPrimary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Zeigt den AssistiPunkt an"
                        android:textSize="16sp"
                        android:textColor="?android:attr/textColorSecondary"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/overlay_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="AssistiPunkt ein oder aus schalten"
                    android:minHeight="48dp"
                    android:minWidth="48dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="8dp"
                    android:scaleX="1.5"
                    android:scaleY="1.5" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Einstellungen Button -->
        <Button
            android:id="@+id/settings_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="⚙ Einstellungen"
            android:textSize="18sp"
            android:contentDescription="Farbe und Geschwindigkeit einstellen"
            android:minHeight="64dp"
            android:layout_marginBottom="24dp"
            android:paddingVertical="16dp" />

        <!-- Hilfe Text -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#E3F2FD"
            app:contentPadding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ℹ️ So funktioniert es"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#1976D2"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• 1x tippen = Zurück\n• 2x tippen = Letzte App\n• 3x tippen = Alle offenen Apps\n• 4x tippen = AssistiPunkt öffnen\n• Lang drücken = Start-Bildschirm"
                    android:textSize="16sp"
                    android:lineSpacingExtra="4dp"
                    android:textColor="#1565C0"
                    android:contentDescription="So funktioniert es: Einmal tippen für Zurück, Zweimal tippen für letzte App, Dreimal tippen für alle offenen Apps, Viermal tippen für AssistiPunkt öffnen, Lang drücken für Start-Bildschirm" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Rewarded Ad Button -->
        <Button
            android:id="@+id/rewarded_ad_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="📺 Werbung anschauen\nDanke für Ihre Unterstützung!"
            android:textSize="16sp"
            android:contentDescription="Werbung anschauen"
            android:minHeight="64dp"
            android:layout_marginTop="24dp"
            android:paddingVertical="16dp"
            android:backgroundTint="#4CAF50" />

        <!-- Service beenden Button -->
        <Button
            android:id="@+id/stop_service_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="⛔ App beenden"
            android:textSize="18sp"
            android:backgroundTint="#D32F2F"
            android:textColor="#FFFFFF"
            android:contentDescription="App beenden"
            android:minHeight="64dp"
            android:layout_marginTop="16dp"
            android:paddingVertical="16dp" />

    </LinearLayout>
</ScrollView>
